{% extends "base.html.twig" %}

{% block title "Evaluations" %}

{% block title_h1 "Gestion des evaluations" %}

{% block stylesheets %}
{{ parent() }}
  <link href="{{ asset("sbadmin2/vendor/datatables/dataTables.bootstrap4.min.css") }}" rel="stylesheet">
{% endblock %}

{% block body %}
<main id="main" class="main">

    <div class="card shadow my-4">
        <div class="card-header py-2 d-flex align-items-center">
            <a href="{{ path("teacher_evaluation_new") }}" class="btn btn-success btn-icon-split ml-auto">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Ajouter une évaluation</span>
            </a>
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="searchInput" placeholder="Recherche..." aria-label="Recherche" aria-describedby="searchButton">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button" id="searchButton">
                    <i class="fas fa-search"></i> Rechercher
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="userTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Date Limite</th>
                            <th>Durée</th>
                            <th>Nombre de Questions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for evaluation in evaluations %}
                        <tr>
                            <td>{{ evaluation.titre }}</td>
                            <td>{{ evaluation.dateLimite|date('Y-m-d') }}</td>
                            <td>{{ evaluation.duree }}</td>
                            <td>{{ evaluation.nbQuestions }}</td>
                            <td>
                                <a href="{{ path("teacher_evaluation_show", {"id": evaluation.id}) }}" class="btn btn-info rounded with-icon">
                                    <i class="far fa-eye"></i>
                                    <span class="text">Show</span>

                                </a>
                                <a href="{{ path("teacher_evaluation_edit", {"id": evaluation.id}) }}" class="btn btn-primary rounded with-icon">
                                    <i class="far fa-edit"></i>
                                    <span class="text">Edit</span>

                                </a>
                                                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main><!-- End #main -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
    $(document).ready(function () {
        $('#searchInput').on('input', function () {
            performSearch();
        });

        function performSearch() {
            var searchTerm = $('#searchInput').val().toLowerCase();

            $('#userTable tbody tr').each(function () {
                var rowData = $(this).text().toLowerCase();
                $(this).toggle(rowData.includes(searchTerm));
            });
        }
    });
    </script>
{% endblock %}
