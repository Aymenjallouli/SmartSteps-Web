{% extends 'base1.html.twig' %}

{% block title %}Unités du Cours {{ cour.Matiere }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Open Sans', sans-serif;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
        }

        .card {
            border: none;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

        .table th {
            background-color: #007bff;
            color: #fff;
        }

        .table td {
            background-color: #f8f9fa;
            color: #333;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            border-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        
            <h1 class="text-center text-blue">Unités du Cours {{ cour.Matiere }}</h1>
            <table class="table table-bordered table-hover">
            <thead class="bg-primary text-white">
                <tr>
                    <th scope="col">Numéro d'unité</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Statut</th>

                    <th scope="col">Contenu</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
        
                    <tbody>
                        {% for unite in unites %}
                            <tr>
                                <td>{{ unite.NumUnite  }}</td>
                                <td>{{ unite.Titre }}</td>
                                <td>{{ unite.Statut }}</td>
                                <td>{{ unite.Contenu }}</td>
                                <td class="actions">
        <div class="d-flex justify-content-between">
            <a href="{{ path('admin_cour_index') }}" class="btn btn-info btn-sm">Back to List</a>
            {{ include('unite/_delete_form.html.twig') }}
        </div>
    </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

    </div>
{% endblock %}
