{% extends 'base.html.twig' %}

{% block title %}Post List{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        .post-image {
            max-width: 100px;
            height: auto;
        }

        .card {
            width: 100%; /* Utilisez 100% pour remplir la largeur de la colonne */
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            margin-bottom: 20px;
        }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <a href="{{ path('app_forum_new') }}" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Create a new forum</a>
    <h1>forum List</h1>

    <div class="column">
        {% for forum in forums %}
            <div class="col-md-9 mb-9 d-flex justify-content-center">
                <div class="card">
                  <h5 class="card-title">{{ forum.titre }}</h5>
                    {% if forum.image %}
                        <img src="{{ asset('uploads/images/' ~ forum.image) }}" alt="{{ forum.titre }}" class="card-img-top">
                    {% else %}
                        <div class="card-img-top text-center">
                            No image
                        </div>
                    {% endif %}
                    <div class="card-body">

                        <p class="card-text">{{ forum.description }}</p>
                                      {{ forum.datecreation ? forum.datecreation|date('d M Y') : '' }}
                    </div>
                    <div class="card-footer text-muted">
                     <a href="{{ path('app_forum_show', {'id': forum.id}) }}" class="btn btn-success"><i class="bi bi-reply"></i> Reply</a>
                        <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="btn btn-secondary"><i class="fas fa-edit"></i> Edit</a>
                        <form method="post" action="{{ path('app_forum_delete', {'id': forum.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.id) }}">
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
                        </form>

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
