{% extends 'base.html.twig' %}

{% block title %}Ajouter Unité{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <style>
        .label-white {
            color: white; /* Définir la couleur du texte en blanc */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Ajouter Unité pour le Cours {{ cour.Matiere }}</h1>
        {{ form_start(form) }}
        {{ form_row(form.Num_unite) }}
        {{ form_row(form.Titre) }}
        {{ form_row(form.Statut) }}
        {{ form_row(form.Contenu) }}
        {{ form_row(form.id_Cour, {'attr': {'value': cour.id}}) }} {# Champ caché avec l'identifiant du cours #}

        <button type="submit" class="add-course-btn">Ajouter</button>
        <a href="{{ path('app_cour_units', {'id': cour.id}) }}" class="add-course-btn">Annuler</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
